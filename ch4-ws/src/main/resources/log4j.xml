<!--    </appender>-->


    <logger name="info.martinussen.scwcd.hfsj.ch4" additivity="false">
        <level value="trace" />
<!--        <appender-ref ref="CH4_ROLLING_FILE" />-->
        <appender-ref ref="STDOUT" />
    </logger>
        
    <root>
        <level value="ERROR" />
        <appender-ref ref="STDERR" />
        <!--  <appender-ref ref="EMAIL" /> -->
    </root>
</log4j:configuration>